{
    "model": {
        "type":     "minecraft:select",
        "property": "minecraft:local_time",
        "pattern":  "MM-dd",

        "cases": [{
            "when": ["12-24", "12-25", "12-26"],
            "model": {
                "type":     "minecraft:select",
                "property": "minecraft:display_context",
                "cases": [{
                    "when": "none",
                    "model": {
                        "type":  "minecraft:special",
                        "base":  "minecraft:item/chest",
                        "model": {"type": "minecraft:chest", "texture": "minecraft:christmas"}
                    }
                }],
                "fallback": {
                    "type":  "minecraft:model",
                    "model": "minecraft:item/christmas_chest_inventory"
                }
            }
        }],

        "fallback": {
            "type":     "minecraft:select",
            "property": "minecraft:display_context",
            "cases": [{
                "when": "none",
                "model": {
                    "type":  "minecraft:special",
                    "base":  "minecraft:item/chest",
                    "model": {"type": "minecraft:chest", "texture": "minecraft:normal"}
                }
            }],
            "fallback": {
                "type":  "minecraft:model",
                "model": "minecraft:item/chest_inventory"
            }
        }
    }
}

